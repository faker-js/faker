{
  "name": "faker",
  "description": "Generate massive amounts of fake contextual data",
  "version": "5.5.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/faker-js/faker.git"
  },
  "scripts": {
    "browser": "gulp browser",
    "jsdoc": "gulp jsdoc",
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "echo 'TODO eslint'",
    "test": "mocha --require ts-node/register ./test/*.spec.ts",
    "test:js": "mocha test/*.*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false",
    "commit-msg": "npx esno scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "/lib/**/*.{js,ts}": [
      "eslint --ext .js,.ts"
    ]
  },
  "nyc": {
    "all": false,
    "include": [
      "lib/**/*.js",
      "vendor/*.js"
    ],
    "exclude": [
      "coverage",
      "locales",
      "modules",
      "white",
      "docs",
      "docker",
      "public",
      "reports",
      "tests",
      "node_modules"
    ],
    "reporter": [
      "html",
      "lcov",
      "clover"
    ],
    "report-dir": "./reports/coverage"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6",
    "browserify": "^16.5.2",
    "conventional-changelog-cli": "~2.2.2",
    "coveralls": "^3.1.0",
    "eslint": "^6.5.1",
    "esno": "~0.13.0",
    "gulp": "^4.0.2",
    "gulp-gh-pages": "^0.5.4",
    "gulp-jsdoc3": "^3.0.0",
    "gulp-mustache": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "ink-docstrap": "1.1.4",
    "jsdoc": "^3.4.0",
    "lint-staged": "~9.5.0",
    "lodash": "^4.6.1",
    "mocha": "^8.1.1",
    "node-minify": "*",
    "nyc": "^15.1.0",
    "optimist": "0.3.5",
    "picocolors": "~1.0.0",
    "prettier": "2.5.1",
    "simple-git-hooks": "~2.7.0",
    "sinon": "^9.0.3",
    "through2": "2.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.4",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vinyl-transform": "^1.0.0",
    "vitepress": "^0.21.4"
  },
  "license": "MIT",
  "main": "index.js"
}
