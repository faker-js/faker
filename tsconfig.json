{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    // required for the signature related tests on macOS #2280
    "test/scripts/apidocs/temp"
  ]
}
