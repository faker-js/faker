{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "alwaysStrict": true,
    // "strictNullChecks": true,
    // "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "stripInternal": true,

    "rootDir": ".",
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
